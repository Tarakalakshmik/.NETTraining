

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-Online Banking</title>
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .body-content {
            flex: 1; /* pushes footer down */
        }

        footer {
            background-color: #f5f5f5;
            text-align: center;
            padding: 10px 0;
            border-top: 1px solid #ddd;
            color: #333;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <ul class="nav navbar-nav navbar-right">

                        <li>@Html.ActionLink("Transaction Details", "Index", "Reports")</li>
                        <li>@Html.ActionLink("New Accounts Approval", "PendingApprovals", "AdminApproval")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "AdminApproval")</li>







                    </ul>

                </ul>
            </div>
        </div>
    </div>

    <div id="bankingCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#bankingCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#bankingCarousel" data-slide-to="1"></li>
            <li data-target="#bankingCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Images/users.jpg" alt="10 Million Users" style="width:100%;">
                <div class="carousel-caption">
                    <h3>10 Million+ Users</h3>
                    <p>Trusted by millions across the country</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/Images/investors.jpg" alt="100 Investors" style="width:100%;">
                <div class="carousel-caption">
                    <h3>100+ Trusted Investors</h3>
                    <p>Backed by leading financial institutions</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/Images/growth.jpg" alt="Certified Growth" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Certified Growth</h3>
                    <p>Recognized as a fast-growing digital bank</p>
                </div>
            </div>
        </div>

        <a class="left carousel-control" href="#bankingCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#bankingCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>

    <div class="container body-content">
        @RenderBody()


    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Online Banking</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
